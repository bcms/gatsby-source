{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declarationMap": false,
    "target": "es5",
    "jsx": "react",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true
  },
  "include": ["src"]
}
